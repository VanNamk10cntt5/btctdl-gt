#include <iostream>
using namespace std;

int squareSum(int n) {
    int sum = 0;
    for (int i = 1; i <= n; i++) {
        sum += i * i;
    }
    return sum;
}

int main() {
    int n;
    cout << "Nhap n: ";
    cin >> n;
    cout << "Tong binh phuong cac so tu 1 den " << n << " la: " << squareSum(n) << endl;
    return 0;
}
